<GuiXml>
    <Controls>
        <TopLevelControl name="MyMiniMap" shape="CIRCLE" mouseEnabled="true" movable="true" clampedToScreen="true">
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
            <Dimensions x="400" y="400"/>
            <Controls>
                <Scroll name="$(parent)VerticalScroll" hidden="false" layer="0" level="0">
                    <Anchor relativeTo="$(parent)" point="CENTER" relativePoint="CENTER"/>
                    <Controls>
                        <Texture name="$(parent)Map">
                            <Anchor relativeTo="$(parent)" point="CENTER" relativePoint="CENTER"/>
                        </Texture>
                    </Controls>
                </Scroll>

                <Scroll name="$(parent)CenterScroll" hidden="false" layer="0" level="0">
                    <Anchor relativeTo="$(parent)" point="CENTER" relativePoint="CENTER"/>
                    <Controls>
                        <Texture name="$(parent)Map">
                            <Anchor relativeTo="$(parent)" point="CENTER" relativePoint="CENTER"/>
                        </Texture>
                    </Controls>
                </Scroll>

                <Scroll name="$(parent)HorizontalScroll" hidden="false" layer="0">
                    <Anchor relativeTo="$(parent)" point="CENTER" relativePoint="CENTER"/>
                    <Controls>
                        <Texture name="$(parent)Map">
                            <Anchor relativeTo="$(parent)" point="CENTER" relativePoint="CENTER"/>
                        </Texture>
                    </Controls>
                    <FadeGradient x1="0" y1="1" size1="20" x2="0" y2="-1" size2="20"/>
                </Scroll>

                <Texture name="$(parent)Wheel" layer="4" textureFile="MyMiniMap/resources/wheel.dds">
                    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)"/>
                </Texture>

                <Texture name="$(parent)PlayerPin" layer="3" textureFile="MyMiniMap/resources/playerArrow.dds">
                    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)Wheel"/>
                </Texture>

                <!--TODO delete-->
                <Texture name="$(parent)TestTile">
                    <Dimensions x="400" y="400"/>
                    <Anchor relativeTo="GuiRoot" point="TOPLEFT" relativePoint="TOPLEFT"/>
                    <Controls>
                        <Texture name="$(parent)1" textureFile="MyMiniMap/resources/wheel.dds">
                            <Dimensions x="400" y="400"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                        </Texture>
                    </Controls>
                </Texture>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>