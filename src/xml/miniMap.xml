<GuiXml>
    <Controls>
        <Control name="MiniMapBase" hidden="false" resizeToFitFile="false" inheritsAlpha="true" scale="1"
                 clampedToScreen="true" virtual="true">
            <Dimensions x="250" y="250"/>
        </Control>

        <TopLevelControl name="MiniMap">
            <Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot" relativePoint="BOTTOMRIGHT"/>
            <Controls>

                <Texture name="$(parent)Wheel" layer="4" movable="true" mouseEnabled="true"
                         textureFile="MyMiniMap/resources/wheel.dds" inherits="MiniMapBase">
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$(parent)"/>
                </Texture>

                <Texture name="$(parent)PlayerPin" layer="3" textureFile="MyMiniMap/resources/playerArrow.dds"
                         inherits="MiniMapBase">
                    <Dimensions x="30" y="30"/>
                    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)Wheel"/>
                </Texture>

                <Texture name="$(parent)World" layer="1"
                         textureFile="MyMiniMap/resources/blank.dds" inherits="MiniMapBase" movable="false">
                    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)Wheel"/>
                </Texture>
                <Texture name="$(parent)Background" layer="0"
                         textureFile="MyMiniMap/resources/roundBackground.dds" inherits="MiniMapBase" movable="false">
                    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)Wheel"/>
                </Texture>
            </Controls>
        </TopLevelControl>

    </Controls>
</GuiXml>